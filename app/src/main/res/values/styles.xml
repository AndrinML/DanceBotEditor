<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="HorizontalListView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DialogMenuView">
        <item name="android:padding">28dp</item>
    </style>

    <style name="DialogMenuElement" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MenuButtonPositive" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_orange</item>
    </style>

    <style name="MenuButtonNegative" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/btn_negative</item>
    </style>

</resources>
